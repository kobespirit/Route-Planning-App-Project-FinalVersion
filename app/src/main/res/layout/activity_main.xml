<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/aboutusback"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:stretchColumns="1"
tools:context="com.example.maxim.routeplanning_app.MainActivity"
    android:weightSum="1">

    <ImageButton
            android:id="@+id/next1"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/searchbutton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:stretchColumns="1"
        android:weightSum="1"
        android:layout_marginLeft="0dp">

        <ImageButton
            android:id="@+id/webview1"
            android:layout_width="165dp"
            android:layout_height="95dp"
            android:background="@drawable/webviewbutton" />

        <ImageButton
            android:id="@+id/webview2"
            android:layout_width="168dp"
            android:layout_height="96dp"
            android:background="@drawable/webviewbutton2" />


    </LinearLayout>

    <ImageButton
    android:id="@+id/about_us"
    android:layout_width="191dp"
    android:layout_height="65dp"
    android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"



    android:background="@drawable/aboutusbutton"
        android:layout_weight="0.6" />


</LinearLayout>
